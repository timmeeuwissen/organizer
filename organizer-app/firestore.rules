rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Match authenticated requests
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow profile updates
      match /profile/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Feedback rules
    match /feedbacks/{feedback} {
      // Users can read and create their own feedback
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow updating own feedback
      allow update: if request.auth != null && 
                     resource.data.userId == request.auth.uid && 
                     request.resource.data.userId == request.auth.uid;
                     
      // For testing purposes in development, allow any authenticated user to read all feedback
      // Consider removing this in production
      allow read: if request.auth != null;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
